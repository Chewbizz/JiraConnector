<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>
    
    <!-- these are only necessary until it is guaranteed the product supports p3 -->
    
    <component key="issueClient" interface="com.atlassian.jira.rest.client.api.IssueRestClient"
               class="com.atlassian.jira.rest.client.plugin.IssueRestClientServiceFactory" public="true" />
    
    <component key="metadataClient" interface="com.atlassian.jira.rest.client.api.MetadataRestClient"
                   class="com.atlassian.jira.rest.client.plugin.MetadataRestClientServiceFactory" public="true" />
    
    <component key="projectClient" interface="com.atlassian.jira.rest.client.api.ProjectRestClient"
                   class="com.atlassian.jira.rest.client.plugin.ProjectRestClientServiceFactory" public="true" />
    
    <component key="projectRolesClient" interface="com.atlassian.jira.rest.client.api.ProjectRolesRestClient"
                   class="com.atlassian.jira.rest.client.plugin.ProjectRolesRestClientServiceFactory" public="true" />
    
    <component key="searchClient" interface="com.atlassian.jira.rest.client.api.SearchRestClient"
                   class="com.atlassian.jira.rest.client.plugin.SearchRestClientServiceFactory" public="true" />
    
    <component key="sessionClient" interface="com.atlassian.jira.rest.client.api.SessionRestClient"
                   class="com.atlassian.jira.rest.client.plugin.SessionRestClientServiceFactory" public="true" />
    
    <component key="userClient" interface="com.atlassian.jira.rest.client.api.UserRestClient"
                   class="com.atlassian.jira.rest.client.plugin.UserRestClientServiceFactory" public="true" />
    
    <component key="versionClient" interface="com.atlassian.jira.rest.client.api.VersionRestClient"
                   class="com.atlassian.jira.rest.client.plugin.VersionRestClientServiceFactory" public="true" />
</atlassian-plugin>
